{
  "name": "relreq",
  "version": "1.0.8",
  "description": "wrap node `require` with relative path",
  "keywords": [
    "relative",
    "path",
    "babel",
    "ES6"
  ],
  "author": "Leo Hsieh <leo0924@gmail.com> (http://leoj.js.org)",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeoAJ/relreq.git"
  },
  "scripts": {
    "cover": "./node_modules/istanbul/lib/cli.js cover --hook-run-in-context node_modules/mocha/bin/_mocha dist/relreq-spec.js -- -R spec",
